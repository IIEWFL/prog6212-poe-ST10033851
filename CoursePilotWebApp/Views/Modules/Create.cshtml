@model CoursePilotWebApp.Models.Domain.Module

@{
    ViewData["Title"] = "Create";
}

<h1>Create a module</h1>

<hr />
<div>
    <a asp-action="Index">Back to List</a>
</div>
<div class="FormContainer">
    <div class="CenterContent">
        <div>
            <section>
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="ModuleCode" class="control-label">Module code</label>
                        <input asp-for="ModuleCode" class="form-control" />
                        <span asp-validation-for="ModuleCode" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="moduleName" class="control-label">Module name</label>
                        <input asp-for="moduleName" class="form-control" />
                        <span asp-validation-for="moduleName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="credits" class="control-label">Credits</label>
                        <input asp-for="credits" class="form-control" />
                        <span asp-validation-for="credits" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="weeklyClassHours" class="control-label">Weekly class hours</label>
                        <input asp-for="weeklyClassHours" class="form-control" />
                        <span asp-validation-for="weeklyClassHours" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="weeksInSem" class="control-label">Weeks in semester</label>
                        <input asp-for="weeksInSem" class="form-control" />
                        <span asp-validation-for="weeksInSem" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="startDate" class="control-label">Start data</label>
                        <input asp-for="startDate" class="form-control" />
                        <span asp-validation-for="startDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
